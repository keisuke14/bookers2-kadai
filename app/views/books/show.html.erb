	<div class="text-center">
 		<div class="row">
 				<% if user_signed_in? %>
				<%= form_with url: search_index_path, method: :get, local: true do |f| %>
		  		<%= text_field_tag :search_word %>
		  		<%= f.select :search_model, [["User"],["Book"]] %>
		  		<%= f.select :search_method, [["完全一致","perfect_match"],["前方一致","forward_match"],["後方一致","backward_match"],["部分一致","partial_match"]] %>
		  　	<%= submit_tag '検索', :name => nil %>
				<% end %>
			<% end %>
		</div>
	</div>

	<div class="container">
    <div class="row">
      <div class="col-xs-3">

				<h2>User info</h2>
				<%= render 'users/profile', user: @book.user  %>

				<h2>New book</h2>
				<%= render 'books/form', book: @book %>

			</div>

			<div class="col-xs-9">
				<h2>Book detail</h2>
				  <% if @book_comment.errors.any? %>
    				<h1> error </h1>
				    <% @book_comment.errors.full_messages.each do |message| %>
				      <li><%= message %></li>
				    <% end %>
				  <% end %>

				<table class="table">
						<tr>
							<td>
								<%= link_to user_path(@book.user) do %>
									<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
								<%= @book.user.name %>
								<% end %>
							</td>
							<td><%= link_to @book.title, book_path(@book) %></td>
							<td><%= @book.body %></td>

								<% if @book.favorited_by?(current_user) %>
								<td>
								  <%= link_to book_favorites_path(@book), method: :delete do %>
										<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
								  <%= @book.favorites.count %>
									<% end %>
								</td>
								<% else %>
								<td>
								  <%= link_to book_favorites_path(@book), method: :post do %>
								     <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
								  <%= @book.favorites.count %>
								<% end %>
								</td>
							<% end %>
							<td><a class="comment-count">コメント数:<%= @book.favorites.count %></a></td>
							<% if current_user == @book.user %>
								<td><%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
								<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
							<% end %>
							</tr>
						</table>

							<% @book_comments.each do |book_comment| %>
						  <table>
							<tr>
							  <td><%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %></td>
							  <td><%= book_comment.body %></td>
							  <td><%= link_to "Destroy", book_book_comment_path(@book.id,book_comment.id), method: :delete, class: "btn btn-danger pull-right" %></td>
							 </tr>
						  </table>
							<% end %>

						<%= form_for( [@book,@book_comment], url: book_book_comments_path(@book)) do |f| %>
						  <div class="row">
						     <div class="col-sm-12">
						     	<tr>
							      <td><%= f.text_area :body, rows:'5', class: "form-control",placeholder: "" %></td>
							     </tr>
							    </div>
							  </div>

							  <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
							<% end %>
							<% if @book_comment.user == current_user %>
		         		 <% end %>
			</div>
		</div>