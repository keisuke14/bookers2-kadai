<table class="table">
	<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>
	<tr>
		<th>follows</th>
		<th><%= link_to do %><%= user.followings.count %><% end %></th>
	</tr>
	<tr>
		<th>followers</th>
		<th><%= link_to do %><%= user.followers.count %><% end %></th>
	</tr>
</table>

<div class="row">
		<% unless current_user == user %>
			<% if current_user.following?(user) %>
				<%= form_with(url: relationship_path, method: :delete, local: true) do |f| %>
					<%= f.hidden_field :followed_id, :value => user.id %>
					<%= f.submit 'フォロー外す', class: '' %>
				<% end %>
			<% else %>
				<%= form_with(url: relationship_path, method: :post, local: true) do |f| %>
					<%= f.hidden_field :followed_id, :value => user.id %>
			    <%= f.submit 'フォローする', class: '' %>
		    <% end %>
		  <% end %>
		 <% end %>
</div>